extends layout


block main
    .login-form
        form.form-signin(role='form' action='' method='post')
            - if (errors)
            .alert.alert-dismissable.alert-danger
        = errors
            input.form-control#username(name='username' type='text' placeholder='员工编号' autofocus)
            input.form-control#password(name='password' type='password' placeholder='口令')
            label.checkbox
                input(type='checkbox'  name='remember_me')
                | 记住我
            button.btn.btn-lg.btn-primary.btn-block.btn-raised(type='submit') 登入


