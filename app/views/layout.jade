html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')
        meta(name='description' content='')
        meta(name='author' content='')
        title GContact
        link(href='/styles/bootstrap.min.css' rel='stylesheet')
        //link(href='/styles/bootstrap-theme.min.css' rel='stylesheet')
        //link(href='/styles/theme.css' rel='stylesheet')
        //link(href='/styles/style.css' rel='stylesheet')
        link(href='/styles/gcontact.css' rel='stylesheet')
    body
        .navbar.navbar-default.navbar-fixed-top(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle(type='button' data-toggle='collapse' data-target='#jb-navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') GContact
                .collapse.navbar-collapse#jb-navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/chatrooms') 聊天室
                    ul.nav.navbar-nav.navbar-right
                        - if (user)
                        li.dropdown
                            a.dropdown-toggle(href='/users/#{user.id}' data-toggle='dropdown') #{user.true_name}
                                span.caret
                                ul.dropdown-menu(role='menu')
                                    a(href='/logout') 登出
                        - else
                        li
                            a(href='/signin') 注册
                        li
                            a(href='/login') 登入
        .siderbar-left
            block sidebar-left
        .main(role='main')
            block main
        .siderbar-right
            block sidebar-right
        .footer(role='footer')
            block footer

        block js
            script(src='/scripts/jquery.js')
            script(src='/socket.io/socket.io.js')
            script(src='/scripts/bootstrap.min.js')


